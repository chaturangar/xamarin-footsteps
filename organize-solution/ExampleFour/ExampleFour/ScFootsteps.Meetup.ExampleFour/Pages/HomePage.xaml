<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScFootsteps.Meetup.ExampleFour.Pages.HomePage">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="20, 40, 20, 20"
                Android="20, 20, 20, 20"
                WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="15">
      <Label Text="Welcome to ExampleFour" VerticalOptions="Center" HorizontalOptions="Center" />

      <Button x:Name="calculationButton" Text="Calculation" Clicked="OnCalculationClicked" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>